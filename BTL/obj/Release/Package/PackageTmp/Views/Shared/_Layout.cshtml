                                        <a href="#"><i class="fa fa-shopping-cart"></i> Số lượng - Số tiền <i class="fa fa-angle-down"></i></a>
                                        @if (Session["Customer"] != null)
                                        {
                                            @Html.Action("MiniCart", "Cart");
                                        }
                                    </div>
                                </div>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên Mật Khẩu</title>
    <link href="~/Content/css/AdminCss/forgetPassword.css" rel="stylesheet" />
</head>
<body>
    <div class="forget-password-container">
        <h2 style="font-size: 30px; text-align: center; color: #333;">Quên Mật Khẩu</h2>
        <form action="@Url.Action("forgetPassword", "Admin", new { area = "AdminArea" })" method="post">
            <div class="input-group">
                <input type="email" name="email" placeholder="Nhập email của bạn" required />
            </div>
            <button type="submit">Gửi mã xác thực</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="success-message"
                 style="margin-top: 15px; color: green; font-size: 14px; text-align: center;">
                @ViewBag.Message
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message"
                 style="margin-top: 15px; color: red; font-size: 14px; text-align: center;">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>
</body>
</html>

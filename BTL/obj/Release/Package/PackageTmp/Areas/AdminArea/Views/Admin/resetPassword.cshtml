@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt lại mật khẩu</title>
    <link href="~/Content/css/AdminCss/forgetPassword.css" rel="stylesheet" />
</head>
<body>
    <div class="forget-password-container">
        <h2 style="font-size: 30px; text-align: center; color: #333;">Đặt lại mật khẩu</h2>

        <!-- Hiển thị email -->
        <p>Email: <strong>@ViewBag.Email</strong></p>

        <!-- Form reset mật khẩu -->
        <form action="@Url.Action("resetPassword", "Admin", new { area = "AdminArea" })" method="post">
            <!-- Ẩn email trong form -->
            <input type="hidden" name="email" value="@ViewBag.Email" />

            <div class="input-group">
                <input type="password" name="newPassword" placeholder="Nhập mật khẩu mới" required />
            </div>
            <div class="input-group">
                <input type="password" name="reNewPassword" placeholder="Xác nhận mật khẩu" required />
            </div>
            <button type="submit">Xác nhận</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="success-message"
                 style="margin-top: 15px; color: green; font-size: 14px; text-align: center;">
                @ViewBag.Message
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message"
                 style="margin-top: 15px; color: red; font-size: 14px; text-align: center;">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>
</body>
</html>
